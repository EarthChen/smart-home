<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.edu.chzu.smart.home.dao.auth.SysUserRoleDao">


    <select id="findOneByUserIdAndRoleId" resultType="cn.edu.chzu.smart.home.domain.user.SysUserRole">
        select
            id,
            user_id,
            role_id
        from sys_user_role
        where user_id = #{userId} and role_id = ${roleId}
    </select>
</mapper>