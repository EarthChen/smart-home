<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.edu.chzu.smart.home.dao.auth.SysUserDao">

    <sql id="base_list">
        id, username, password, email, image_url
    </sql>


    <resultMap id="userRole" type="cn.edu.chzu.smart.home.domain.user.SysUser">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="username" property="username" jdbcType="VARCHAR"/>
        <result column="password" property="password" jdbcType="VARCHAR"/>
        <result column="email" property="email" jdbcType="VARCHAR"/>
        <result column="image_url" property="imageUrl" jdbcType="VARCHAR"/>
        <!--<collection property="roles" ofType="cn.edu.chzu.smart.home.domain.user.SysRole">-->
        <!--<result column="value" property="value"/>-->
        <!--</collection>-->
        <collection property="roles" column="id" select="cn.edu.chzu.smart.home.dao.auth.SysRoleDao.findRoleByUserId"/>
    </resultMap>


    <!--<select id="findOneWithRolesByUsername" parameterType="string" resultMap="userRole">-->
    <!--select *-->
    <!--from sys_user as u-->
    <!--LEFT JOIN sys_user_role as sru on u.id = sru.user_id-->
    <!--LEFT JOIN sys_role as r on sru.role_id = r.id-->
    <!--where username = #{username}-->
    <!--</select>-->

    <select id="findOneWithRolesByUsername" parameterType="string" resultMap="userRole">
        select
            id,
            username,
            password,
            email,
            image_url
        from sys_user
        where username = #{username}
    </select>

    <select id="findOneByUsername" resultType="cn.edu.chzu.smart.home.domain.user.SysUser">
        select
        <include refid="base_list"></include>
        from sys_user
        where username=#{username}
    </select>


</mapper>